{
	"name": "@polar-sh/nextjs",
	"version": "0.3.14",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"import": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"require": {
			"types": "./dist/index.d.cts",
			"require": "./dist/index.cjs"
		}
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsup ./src/index.ts --format esm,cjs --dts --clean --sourcemap",
		"dev": "tsc --watch",
		"check": "biome check --write ./src"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@polar-sh/adapter-utils": "workspace:*",
		"@polar-sh/sdk": "^0.21.3"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@sindresorhus/tsconfig": "^7.0.0",
		"tsup": "^8.3.5"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"peerDependencies": {
		"next": "^15.0.0"
	}
}
